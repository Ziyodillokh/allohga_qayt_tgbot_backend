# ===========================================
# BILIMDON BACKEND - PRODUCTION ENVIRONMENT
# ===========================================
# Bu faylni VPS serverda .env deb nomlang

# Database - PostgreSQL
DATABASE_URL="postgresql://postgres:YOUR_STRONG_PASSWORD@postgres:5432/bilimdon?schema=public"

# Redis (agar ishlatilsa)
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_SECRET=YOUR_VERY_STRONG_SECRET_KEY_CHANGE_THIS_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# App
PORT=3001
NODE_ENV=production
APP_DOMAIN=http://localhost:3000

# Gemini AI
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_BOT_USERNAME=Bilimdon_aibot
TELEGRAM_ADMIN_CHAT_ID=YOUR_ADMIN_CHAT_ID
WEBAPP_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# SMTP (Email) - Gmail Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=Bilimdon Platform
SMTP_FROM_EMAIL=your-email@gmail.com

# Backend URL (public)
BACKEND_URL=http://localhost:3001
